<h1>Eat Da Burger, You know you want to........delicious</h1>
<br>

<div id='burgersavavalible'>
    <h3> Burgers That You Can Eat: </h3>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burgers_name}}
             <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>
        </li>
        {{/unless}} {{/each}}
    </ul>

</div>
<div id='devoured'>
    <h2>Burgers That Have <br>Been Devoured: </h2>

    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burgers_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burgers_name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>