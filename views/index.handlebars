<h1>Eat Da Burger, You know you want to........delicious</h1>
<br>

<div id='burgersavavalible'>
    <h3> Burgers That You Can Eat: </h3>
    <ul>
        <li>
            {{#each burgers}} {{#unless devoured}}

            {{> burgers/burger-block devoured=true}}
            <form action="/{{id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>
        </li>
        {{/unless}} {{/each}}
    </ul>

</div>
<div id='devoured'>
    <h2>Burgers That Have Been Devoured: </h2>

    <ul>
        {{#each burgers}} {{#if devoured}}
        <li>
            {{> burgers/burger-block devoured=false}}
        </li>
        {{/if}} 
        {{/each}}
    </ul>
</div>

<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-form"  method="POST">
        <div class="form-group">
            <label for="ba">Burger Name:</label>
            <input type="text" id="ba" name="burger_name">
        </div>
       
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>